#!/bin/bash

# Get the newest source
cd /tmp/
git clone https://github.com/phpbb/phpbb src
cd /tmp/src/phpBB
if [ -z ${BRANCH+x} ]
  then
  git checkout $BRANCH
fi

# install phpBB dependencies
php ../composer.phar install

# move the application source
mv /tmp/src/phpBB/* $HOME/

chgrp apache $HOME/* -R
chmod g+w $HOME/cache
chmod g+w $HOME/store
chmod g+w $HOME/files
chmod g+w $HOME/images/avatars/upload/ directory
